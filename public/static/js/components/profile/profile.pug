div(class="img-with-text")
    img(class="avatar" src=`${avatarLink}`)
    form(action=`${uploadAvatarLink}` method="post" id="upload-avatar" enctype="multipart/form-data")
        span(class="upload-btn-wrapper")
            button(class="btn update" value="Update")
            input(type="file" name="avatar")
    a(class="btn delete" id="delete-avatar") Delete
    a(href="#" id="logout" data-section="menu") LOG OUT

