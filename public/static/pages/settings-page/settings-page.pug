section(class="menu settings-page")
    include ../../components/menu-ref/menu-ref.pug
    div.settings__img-with-text
        if avatarLink
            img.avatar(src=`${avatarLink}`)
        form(action=`${uploadAvatarLink}` method="post" id="upload-avatar" enctype="multipart/form-messages")
            span.upload-btn-wrapper
                button(class="btn update") Update
                input(type="file" name="avatar")
        button(class="btn delete" id="delete-avatar") Delete
        hr
    div.js-settings-form-root
        include ../../components/form/form.pug
